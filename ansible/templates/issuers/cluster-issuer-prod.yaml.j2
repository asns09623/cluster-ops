apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
spec:
  acme:
    email: {{ acme.email }}
    server: https://acme-v02.api.letsencrypt.org/directory
    privateKeySecretRef: { name: letsencrypt-prod }
    solvers:
    - dns01:
        route53:
          region: {{ aws_region }}
          hostedZoneID: {{ hosted_zone_id }}
